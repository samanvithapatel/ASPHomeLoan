@model IEnumerable<ASPHome.Models.Document>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PanCard)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VoterId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalarySlip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LOA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOCFromBuilder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AgreementToSale)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    @if (item.PanCard != null && item.VoterId != null && item.SalarySlip != null && item.LOA != null && item.NOCFromBuilder != null && item.AgreementToSale != null)
    {
        <td>
            @if (item.PanCard != null)
            {
                var base64 = Convert.ToBase64String(item.PanCard);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                <img style="height: 40px;" src="@imgsrc" />
            }
        </td>
        <td>
            @if (item.VoterId != null)
            {
                var base64 = Convert.ToBase64String(item.VoterId);
                var imgsrc1 = string.Format("data:image/jpg;base64,{0}", base64);
                <img style="height: 40px;" src="@imgsrc1" />
            }
        </td>
        <td>
            @if (item.SalarySlip != null)
            {
                var base64 = Convert.ToBase64String(item.SalarySlip);
                var imgsrc1 = string.Format("data:image/jpg;base64,{0}", base64);
                <img style="height: 40px;" src="@imgsrc1" />
            }

        </td>
        <td>
            @if (item.LOA != null)
            {
                var base64 = Convert.ToBase64String(item.LOA);
                var imgsrc1 = string.Format("data:image/jpg;base64,{0}", base64);
                <img style="height: 40px;" src="@imgsrc1" />
            }
        </td>
        <td>
            @if (item.NOCFromBuilder != null)
            {
                var base64 = Convert.ToBase64String(item.NOCFromBuilder);
                var imgsrc1 = string.Format("data:image/jpg;base64,{0}", base64);
                 <img style="height: 40px;" src="@imgsrc1" />
            }
        </td>
        <td>
            @if (item.AgreementToSale != null)
            {
                var base64 = Convert.ToBase64String(item.AgreementToSale);
                var imgsrc1 = string.Format("data:image/jpg;base64,{0}", base64);
                <img style="height: 40px;" src="@imgsrc1" />


            }
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })

        </td>
    }
</tr>
}

</table>
