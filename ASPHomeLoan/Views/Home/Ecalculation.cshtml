
@model ASPHome.Models.Calculation
@{
    ViewBag.Title = "EmiCalculation";
}
<h2> Customer EMI Calculator </h2>

@using (Html.BeginForm("Index"))
{
    <div class="form-group">
        <label for="CustomerName"> CustomerName</label>
        <input type="text" class="form-control" id="CustomerName" name="CustomerName" value="@Model.CustomerName" />
    </div>
    <div class="form-group">
        <label for="Salary">Enter your Salary per month</label>
        <input type="text" class="form-control" id="Salary" name="Salary" value="@Model.Salary" />
    </div>
    <div class="form-group">
        <label for="LoanAmount">Enter Loan amount taken</label>
        <input type="text" class="form-control" id="LoanAmount" name="LoanAmount" value="@Model.LoanAmount" />
    </div>
    <div class="form-group">
        <label for="LoanTenure">Enter the loantenure(in months)</label>
        <input type="text" class="form-control" id="LoanTenure" name="loantenure" value="@Model.LoanTenure" />
    </div>

    <h4>To calculate EMI please enter submit</h4>
    <button type="submit" class="btn btn-info" id="calculate" value="calculate">Calculate</button>

    <div class="form-group">
        <label for="EMI">EMI for the loan amount given </label>
        <input type="text" class="form-control" id="EMI" name="EMI" value="@Model.EMI" />
    </div>
    <h4>Interest considered </h4>
    <div class="form-group">
        <label for="ROI">Rate of Interest </label>
        <input type="text" class="form-control" id="ROI" name="ROI" value="@Model.ROI" />
    </div>
    @Html.ActionLink("Go to back", "Index")
}


