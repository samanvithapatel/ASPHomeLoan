@model IEnumerable<ASPHome.Models.Loan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Loan Details</h2>

<p>@Html.ActionLink("Create New", "Create")</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.MaxLoanAmountGrantable)</th>
        <th>@Html.DisplayNameFor(model => model.ROI)</th>
        <th>@Html.DisplayNameFor(model => model.Tenure)</th>
        <th>@Html.DisplayNameFor(model => model.LoanAmount)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MaxLoanAmountGrantable)</td>
            <td>@Html.DisplayFor(modelItem => item.ROI)</td>
            <td>@Html.DisplayFor(modelItem => item.Tenure)</td>
            <td>@Html.DisplayFor(modelItem => item.LoanAmount)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<div>
    <button><a href="https://localhost:44393/Personals/Create">Next</a></button>
</div>
